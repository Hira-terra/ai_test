# 眼鏡店顧客管理システム - フロントエンド環境変数設定
# =================================================================
# 本ファイルをコピーして .env.local ファイルを作成し、適切な値を設定してください
# React アプリでは REACT_APP_ で始まる変数のみがビルドに含まれます

# =================================================================
# アプリケーション基本設定
# =================================================================
REACT_APP_APP_NAME=眼鏡店顧客管理システム
REACT_APP_VERSION=1.0.0

# =================================================================
# API エンドポイント設定
# =================================================================
# バックエンドAPI のベースURL
# 本番環境では相対パス /api を推奨（Nginx経由でアクセス）
# ローカル開発でも Nginx経由 (http://localhost) を使用することを推奨
REACT_APP_API_BASE_URL=/api
REACT_APP_API_URL=/api

# WebSocket接続URL（リアルタイム通信用）
REACT_APP_WS_URL=ws://localhost:3001

# =================================================================
# 認証設定
# =================================================================
# JWT トークンの保存キー名
REACT_APP_AUTH_TOKEN_KEY=auth_token
REACT_APP_REFRESH_TOKEN_KEY=refresh_token

# トークンリフレッシュ設定
REACT_APP_TOKEN_REFRESH_THRESHOLD=300000

# セッションタイムアウト警告（ミリ秒）
REACT_APP_SESSION_WARNING_TIME=300000

# =================================================================
# UI・UX設定
# =================================================================
# テーマ設定
REACT_APP_THEME_PRIMARY_COLOR=#1976d2
REACT_APP_THEME_SECONDARY_COLOR=#dc004e

# 言語設定
REACT_APP_DEFAULT_LANGUAGE=ja
REACT_APP_SUPPORTED_LANGUAGES=ja,en

# タイムゾーン設定
REACT_APP_TIMEZONE=Asia/Tokyo

# =================================================================
# ファイル・画像設定
# =================================================================
# 画像アップロード制限
REACT_APP_MAX_FILE_SIZE=10485760
REACT_APP_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif

# 画像表示設定
REACT_APP_IMAGE_BASE_URL=http://localhost:3001/uploads
REACT_APP_THUMBNAIL_SIZE=200

# =================================================================
# 画像注釈機能設定（Fabric.js）
# =================================================================
# 注釈ツール設定
REACT_APP_ANNOTATION_ENABLED=true
REACT_APP_ANNOTATION_MAX_LAYERS=10
REACT_APP_ANNOTATION_AUTO_SAVE=true
REACT_APP_ANNOTATION_SAVE_INTERVAL=30000

# Fabric.js 設定
REACT_APP_FABRIC_SELECTION_COLOR=rgba(178, 204, 255, 0.8)
REACT_APP_FABRIC_CORNER_COLOR=#1976d2

# =================================================================
# 機能フラグ設定
# =================================================================
# 開発中機能の有効/無効設定
REACT_APP_FEATURE_ANALYTICS_ENABLED=true
REACT_APP_FEATURE_EXPORT_ENABLED=true
REACT_APP_FEATURE_ADVANCED_SEARCH=true
REACT_APP_FEATURE_BULK_OPERATIONS=true

# 実験的機能
REACT_APP_FEATURE_VOICE_INPUT=false
REACT_APP_FEATURE_QR_SCAN=false

# =================================================================
# パフォーマンス設定
# =================================================================
# データ取得設定
REACT_APP_PAGINATION_SIZE=20
REACT_APP_SEARCH_DEBOUNCE_MS=300

# キャッシュ設定
REACT_APP_CACHE_ENABLED=true
REACT_APP_CACHE_TTL=300000

# 遅延読み込み設定
REACT_APP_LAZY_LOADING_ENABLED=true
REACT_APP_INTERSECTION_THRESHOLD=0.1

# =================================================================
# エラー処理・ログ設定
# =================================================================
# エラー追跡設定
REACT_APP_ERROR_TRACKING_ENABLED=false
REACT_APP_SENTRY_DSN=

# コンソールログ設定
REACT_APP_LOG_LEVEL=info
REACT_APP_CONSOLE_LOGS_ENABLED=true

# =================================================================
# PWA（Progressive Web App）設定
# =================================================================
# PWA有効化
REACT_APP_PWA_ENABLED=true

# オフライン機能
REACT_APP_OFFLINE_ENABLED=false

# プッシュ通知設定
REACT_APP_PUSH_NOTIFICATIONS_ENABLED=false
REACT_APP_VAPID_PUBLIC_KEY=

# =================================================================
# 外部サービス設定
# =================================================================
# Google Analytics
REACT_APP_GA_TRACKING_ID=

# Google Maps API（店舗地図表示用）
REACT_APP_GOOGLE_MAPS_API_KEY=

# =================================================================
# セキュリティ設定
# =================================================================
# コンテンツセキュリティポリシー設定
REACT_APP_CSP_ENABLED=true

# 外部リソース読み込み制限
REACT_APP_EXTERNAL_RESOURCES_ALLOWED=false

# =================================================================
# 開発・デバッグ設定
# =================================================================
# 開発ツール設定
REACT_APP_REDUX_DEVTOOLS_ENABLED=false
REACT_APP_REACT_DEVTOOLS_ENABLED=false

# Mock API設定（開発時のみ）
REACT_APP_USE_MOCK_API=false
REACT_APP_MOCK_DELAY_MS=500

# デバッグモード
REACT_APP_DEBUG_MODE=false
REACT_APP_VERBOSE_LOGGING=false

# =================================================================
# タブレット・モバイル最適化設定
# =================================================================
# タッチ操作設定
REACT_APP_TOUCH_ENABLED=true
REACT_APP_SWIPE_GESTURES_ENABLED=true

# 画面回転対応
REACT_APP_ORIENTATION_LOCK=false

# バーチャルキーボード対応
REACT_APP_VIRTUAL_KEYBOARD_ADJUSTMENT=true

# =================================================================
# 通知設定
# =================================================================
# システム通知
REACT_APP_NOTIFICATIONS_ENABLED=true
REACT_APP_NOTIFICATION_DURATION=5000

# 音声通知
REACT_APP_SOUND_NOTIFICATIONS_ENABLED=false

# =================================================================
# 印刷・エクスポート設定
# =================================================================
# 印刷機能
REACT_APP_PRINT_ENABLED=true
REACT_APP_PRINT_TEMPLATES=invoice,prescription,receipt

# データエクスポート
REACT_APP_EXPORT_FORMATS=csv,pdf,excel
REACT_APP_EXPORT_MAX_RECORDS=10000

# =================================================================
# 店舗固有UI設定
# =================================================================
# ロゴ・ブランディング
REACT_APP_COMPANY_LOGO_URL=/assets/logo.png
REACT_APP_COMPANY_NAME=○○眼鏡チェーン
REACT_APP_FAVICON_URL=/assets/favicon.ico

# カスタムCSS
REACT_APP_CUSTOM_CSS_ENABLED=false
REACT_APP_CUSTOM_CSS_URL=/assets/custom.css

# =================================================================
# 本番環境固有設定
# =================================================================
# CDN設定
REACT_APP_CDN_ENABLED=false
REACT_APP_CDN_BASE_URL=

# SSL設定
REACT_APP_FORCE_HTTPS=true

# セキュリティヘッダー
REACT_APP_SECURITY_HEADERS_ENABLED=true
{
  "name": "glasses-store-backend",
  "version": "1.0.0",
  "description": "眼鏡店顧客管理システム - バックエンドAPI",
  "main": "dist/index.js",
  "_moduleAliases": {
    "@": "dist",
    "@/controllers": "dist/controllers",
    "@/middleware": "dist/middleware",
    "@/routes": "dist/routes",
    "@/services": "dist/services",
    "@/types": "dist/types",
    "@/utils": "dist/utils",
    "@/database": "dist/database",
    "@/config": "dist/config",
    "@/repositories": "dist/repositories"
  },
  "scripts": {
    "start": "NODE_ENV=production node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.{ts,js}",
    "type-check": "tsc --noEmit",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:seed": "ts-node src/database/seed.ts"
  },
  "keywords": [
    "glasses",
    "customer-management",
    "api",
    "express",
    "typescript"
  ],
  "author": "Glasses Store Team",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "pg": "^8.11.1",
    "prisma": "^5.1.1",
    "rate-limiter-flexible": "^2.4.2",
    "redis": "^4.6.7",
    "sharp": "^0.32.1",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.5",
    "@types/nodemailer": "^6.4.8",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.0.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
